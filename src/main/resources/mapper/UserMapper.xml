<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jd.springboot.dao.UserMapper" >

    <insert id="save" parameterType="com.jd.springboot.entity.User">
        insert into user(name,age) values(#{name,jdbcType=VARCHAR},#{age,jdbcType=NUMERIC})
    </insert>

    <select id="selectById" resultType="com.jd.springboot.entity.User">
        select * from user where id = #{id,jdbcType=NUMERIC}
    </select>

    <update id="updateById" parameterType="com.jd.springboot.entity.User">
        update user set
        name = #{name,jdbcType=VARCHAR} ,
        age = #{age,jdbcType=NUMERIC}
        where id = #{id,jdbcType=NUMERIC}
    </update>

    <delete id="deleteById">
        delete from user where id = #{id,jdbcType=NUMERIC}
    </delete>

    <select id="queryAll" resultType="com.jd.springboot.entity.User">
        select * from t_user
    </select>

</mapper>